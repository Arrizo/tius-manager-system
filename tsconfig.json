{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "isolatedModules":true,

    /* Bundler mode */
    "moduleResolution": "node",
    "suppressImplicitAnyIndexErrors":true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "paths": {
      "@/*": ["src/*"]
    },
    "strict": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true
    /* Linting */

  },
  "include": ["src/**/*", "src/**/*.vue"],
  "exclude": ["node_modules"],
}