{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "isolatedModules":true,

    /* Bundler mode */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "paths": {
      "@/*": ["src/*"]
    },
    "strict": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true
    /* Linting */

  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "electron/**/*.ts",
    "src/**/*.vue",
  ],
  "exclude": ["node_modules","dist"],
}